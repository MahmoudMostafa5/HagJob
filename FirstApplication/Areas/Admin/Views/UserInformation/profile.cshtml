                                </div>
                            </div>*@
                                
                                <a  class="btn btn-primary btn" asp-area="Admin" asp-controller="BdfOnBrowser" asp-action="DownloadFile" >Download my Cv</a>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-info" asp-area="Admin" asp-controller="UserInformation" asp-action="UpdateInformation"> Edit My Information </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Country</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @ViewBag.userAdress.Country
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">City</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @ViewBag.userAdress.City
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Street</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @ViewBag.userAdress.Street
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Zip Code</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @ViewBag.userAdress.ZipCode
                            </div>
                        </div>
                        <hr>
                        
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-info"  asp-area="Admin" asp-controller="UserInformation" asp-action="UpdateUserAddress">Edit My Adress</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    function thisFileUpload() {
        document.getElementById("file").click();
    };
    function thisPhotoUpload() {
        document.getElementById("photo").click();
    };
    var file = document.getElementById("file");
    var photo = document.getElementById("photo");
    const btn = document.querySelector('#btnUpdateCv');
    const btn_phto = document.querySelector('#btnUpdatePhoto');
    const message = document.querySelector('#Message');
    
    btn.addEventListener('click', function (e) {
        if (file.files.length == 0) {
            alert("Please Choose New Cv Firstly !");
            e.stopPropagation();
        } else {
            document.getElementById("btnUpdateCv").type = "submit";
        }
    });
    btn_phto.addEventListener('click', function (e) {
        if (photo.files.length == 0) {
            alert("Please Choose New Photo Firstly !");
            e.stopPropagation();
        } else {
            document.getElementById("btnUpdatePhoto").type = "submit";
        }
    });
</script>