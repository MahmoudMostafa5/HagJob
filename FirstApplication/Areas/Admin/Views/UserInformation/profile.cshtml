                            <span class="text-secondary">bootdey</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>Facebook</h6>
                            <span class="text-secondary">bootdey</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">First Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @ViewBag.userInformation.FirstName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Last Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @ViewBag.userInformation.LastName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @ViewBag.userInformation.Phone
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Job Title</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @ViewBag.userInformation.JobTitle
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">My Cv</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <a class="btn btn-primary btn" target="_blank" asp-area="Admin" asp-controller="BdfOnBrowser" asp-action="Index">View My Cv</a>
                                <form style="display:inline" enctype="multipart/form-data" asp-area="Admin" asp-controller="UserInformation" asp-action="UpdateMyCv">
                                    <div class="btn-group">
                                        <button id="button" type="button" name="button" class="btn btn-primary btn" onclick="thisFileUpload();">Choose Cv</button>
                                        <input  type="file" id="file" name="MyCv" style="display:none;" />
                                        <button id="btnUpdateCv" type="button" class="btn btn-primary">Update</button>
                                    </div>
                                </form>
                                
                            @*<div class="btn-group">
                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                    Update My Cv
                                </button>
                                <div class="dropdown-menu">
                                    <form enctype="multipart/form-data" style="display:inline" asp-area="Admin" asp-controller="UserInformation" asp-action="UpdateMyCv">
