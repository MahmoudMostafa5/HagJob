@model FirstApplication.Models.UserInformationVm

<div class="container-login">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card shadow-sm my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="login-form">
                                <div asp-validation-summary="All"></div>
                                <form enctype="multipart/form-data" asp-controller="UserInformation" asp-action="UpdateInformation" asp-area="Admin">
                                    <input type="text" asp-for="UserId" value="@Model.UserId" hidden />
                                    <div class="form-group">
                                        <label>First Name</label>
                                        <input type="text" class="form-control" id="exampleInputFirstName" value="@Model.FirstName" asp-for="FirstName">
                                    </div>
                                    <div class="form-group">
                                        <label>Last Name</label>
                                        <input type="text" class="form-control" id="exampleInputLastName" value="@Model.LastName" asp-for="LastName">
                                    </div>
                                    <div class="form-group">
                                        <label>Phone</label>
                                        <input type="text" class="form-control" id="exampleInputLastName" value="@Model.Phone" asp-for="Phone">
                                    </div>
                                    <div class="form-group">
                                        <label>Job Title</label>
                                        <input type="text" class="form-control" id="exampleInputLastName" value="@Model.JobTitle" asp-for="JobTitle">
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="CV"></label>
                                        <input type="file" id="file" class="btn btn-primary btn-block" name="CV" required>
                                        <label id="Message_Cv" class="text-danger" style="display:none">Please Choose Your Cv</label>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Photo"></label>
                                        <input type="file" id="photo" class="btn btn-primary btn-block" name="Photo" required>
                                        <label id="Message_Photo" class="text-danger" style="display:none">Please Choose Your Photo</label>
                                    </div>

                                    <div class="form-group">
                                        <button id="btnUpdateCv" type="submit" class="btn btn-success btn-block">Save</button>
                                    </div>
                                </form>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Validation using JQuery-->
<script>
    var file = document.getElementById("file");
    var photo = document.getElementById("photo");
    const btn = document.querySelector('#btnUpdateCv');

    btn.addEventListener('click', function (e) {
        if (file.files.length == 0) {
            $("#Message_Cv").css("display", "block");
            document.getElementById("btnUpdateCv").type = "button";
        } else {
            $("#Message_Cv").css("display", "none");
            document.getElementById("btnUpdateCv").type = "submit";
        }
        if (photo.files.length == 0) {
            $("#Message_Photo").css("display", "block");
            document.getElementById("btnUpdateCv").type = "button";
        } else {
            $("#Message_Photo").css("display", "none");
            document.getElementById("btnUpdateCv").type = "submit";
        }
    });
</script>