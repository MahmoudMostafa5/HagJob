@model FirstApplication.Models.AdressUserVM

<div class="container-login">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card shadow-sm my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="login-form">
                                <div asp-validation-summary="All"></div>
                                <form enctype="multipart/form-data" asp-controller="UserInformation" asp-action="UpdateUserAddress" asp-area="Admin">
                                    <input type="text" asp-for="UserId" value="@Model.UserId" hidden/>
                                    <div class="form-group">
                                        <label>Country</label>
                                        <input type="text" class="form-control" id="exampleInputFirstName" value="@Model.Country" asp-for="Country">
                                    </div>
                                    <div class="form-group">
                                        <label>City</label>
                                        <input type="text" class="form-control" id="exampleInputLastName" value="@Model.City" asp-for="City">
                                    </div>
                                    <div class="form-group">
                                        <label>Street</label>
                                        <input type="text" class="form-control" id="exampleInputLastName" value="@Model.Street" asp-for="Street">
                                    </div>
                                    <div class="form-group">
                                        <label>ZIP Code</label>
                                        <input type="text" class="form-control" id="exampleInputLastName" value="@Model.ZipCode" asp-for="ZipCode">
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-success btn-block">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>