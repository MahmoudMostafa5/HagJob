@model FirstApplication.Models.JobVm
    <div class="container-login">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card shadow-sm my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-form">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Upload New Job</h1>
                                    </div>
                                    <div asp-validation-summary="All">
                                    </div>
                                    <form enctype="multipart/form-data" asp-area="Admin" asp-controller="Jobs" asp-action="CreateJob">
                                        <div class="form-group">
                                            <label asp-for="Name"></label>
                                            <input type="text" asp-for="Name" class="form-control" id="exampleInputFirstName" placeholder="Enter Name">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Location"></label>
                                            <input type="text" asp-for="Location" class="form-control" id="exampleInputLastName" placeholder="Enter Location">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="CompanyName"></label>
                                            <input type="text" asp-for="CompanyName" class="form-control" id="exampleInputLastName" placeholder="Enter Location">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Requriments"></label>
                                            <input type="text" asp-for="Requriments" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="Please Requriments of Job">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="JobDescription"></label>
                                            <input type="text" asp-for="JobDescription" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="Please Requriments of Job">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Skills"></label>
                                            <input type="text" asp-for="Skills" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="Please Requriments of Job">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Education"></label>
                                            <input type="text" asp-for="Education" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="Please Requriments of Job">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Image"></label>
                                            <input type="file" asp-for="Image" name="photo" required class="form-control" id="exampleInputPassword">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Experience"></label>
                                            <input type="number" asp-for="Experience" class="form-control" id="exampleInputPasswordRepeat"
                                                   placeholder="Please enter Experience">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Salary"></label>
                                            <input  asp-for="Salary" class="form-control" id="exampleInputPasswordRepeat"
                                                   placeholder="Please enter Experience">
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="DepId" class="control-label"></label>
                                            <select name="DepId" required asp-for="DepId" class="form-control custom-select custom-select-lg mb-3" asp-items="@(new SelectList(@ViewBag.DepartmentList ,"DepartmentId","Department_Name"))">
                                                <option selected>Open this select menu</option>

                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label" required>Type of Time</label>
                                            <select class="form-control custom-select custom-select-lg mb-3" asp-for="Time">
                                                <option value="" selected>Please Choose Type Of Time</option>
                                                <option value="Part Time">Part Time</option>
                                                <option value="Full Time">Full Time</option>
                                                <option value="Remotely">Remotely</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-primary btn-block" value="Upload" />
                                        </div>

                                    </form>
                                    <div class="form-group">
                                        <a type="button" class="btn btn-primary btn-block" asp-action="Index">Back To List</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
