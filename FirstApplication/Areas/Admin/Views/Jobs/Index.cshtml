                    <div class="col-lg-12">
                        <div class="section-tittle text-center">
                            <span>FEATURED Jobs</span>
                            <h2>Browse Top Jobs </h2>
                        </div>
                    </div>
                </div>
                <div class="row d-flex justify-contnet-center">

                    @foreach (var item in Model)
                    {
                        <a href="/Admin/Jobs/ViewAllJobs/@item.DepartmentId">
