                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-tittle text-center">
                            <h2>Recent Jobs</h2>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-xl-10">
                        <!-- single-job-content -->

                        @foreach (var item in ViewBag.job)
                        {

                            <div class="single-job-items mb-30">
                                <div class="job-items">
                                    <div class="company-img">
                                        <a href="#"><img src="~/ImageProfile/@item.Image" alt=""></a>
                                    </div>
                                    <div class="job-tittle job-tittle2">
                                        <a href="#">
                                            <h4>@item.Name</h4>
                                        </a>
                                        <ul>
                                            <li><i class="fas fa-align-left"></i>@item.Requriments</li>
                                            <li><i class="fas fa-map-marker-alt"></i>@item.Location</li>
                                            <li><i class="fab fa-get-pocket"></i> @item.Experience Years</li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="items-link items-link2 f-right">
                                    <a href="job_details.html">@item.Time</a>
                                    <span>@item.Date</span>
