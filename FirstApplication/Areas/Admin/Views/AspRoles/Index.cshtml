@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole> 
<link href="~/css/StyleSheet.css" rel="stylesheet" />
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <table class="table table-hover ">
        <thead>
            <tr>
                <th>Role Name</th>
                <th></th><th></th><th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <div class="form-group" id="RegistrationButton">
                            <a asp-action="Edite"   asp-route-Id="@item.Id" asp-controller="AspRoles" asp-area="Admin" class="btn btn-primary" >Edite</a>
                            <a asp-action="Delete"  asp-route-Id="@item.Id" asp-controller="AspRoles" asp-area="Admin" class="btn btn-primary" >Delete</a>
                            <a asp-action="Details" asp-route-Id="@item.Id" asp-controller="AspRoles" asp-area="Admin" class="btn btn-primary" >Details</a>
                        </div>
                            </td>
                </tr>
            }
        </tbody>
    </table>
