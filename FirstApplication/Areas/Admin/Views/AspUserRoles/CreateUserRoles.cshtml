

@model FirstApplication.Models.AspUserRoles
<link href="~/css/StyleSheet.css" rel="stylesheet" />
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>



<form asp-action="CreateUserRoles" asp-controller="AspUserRoles" method="post">
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01">User Email</label>
        </div>
        <select class="custom-select" id="inputGroupSelect01" name="UserId" asp-for="UserId" asp-items="@(new SelectList(@ViewBag.Users ,"Id","Email"))"></select>
    </div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">

            <label class="input-group-text" for="inputGroupSelect01">Role Name</label>
        </div>
        <select class="custom-select" id="inputGroupSelect01" name="RoleId" asp-for="RoleId" asp-items="@(new SelectList(@ViewBag.Roles ,"Id","Name"))"></select>
    </div>
    <div class="form-group">
        <button type="submit" id="btn" class="btn btn-primary btn-block">Adding</button>
    </div>
</form>