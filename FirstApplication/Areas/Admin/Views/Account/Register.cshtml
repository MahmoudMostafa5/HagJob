@model FirstApplication.Models.Register
<link href="~/css/StyleSheet.css" rel="stylesheet" />
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<form asp-controller="Account" asp-action="Register" asp-area="Admin" method="post">
@if(ViewBag.Message != null)
{
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Success!</strong> Indicates a successful or positive action.
    </div>
    }

        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label>UserName</label>
            <input type="text" asp-for="UserName" class="form-control" id="exampleInputFirstName" placeholder="Enter First Name">

        </div>
        @*/*
        <div class="form-group">
            <label>Email</label>
            <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp"
                   placeholder="Enter Email Address">
        </div>

        */*@
        <div class="form-group">
            <label>Email</label>
            <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp"
                   placeholder="Enter Email Address">
        </div>
        <div class="form-group">
            <label>User Type</label>
            <select name="UserType" asp-for="UserType" class="form-control" asp-items="@(new SelectList(@ViewBag.cities ,"ID","User_Type_Name"))"></select>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" asp-for="PassWord" class="form-control" id="exampleInputPassword" placeholder="Password">
        </div>
        <div class="form-group">
            <label>Repeat Password</label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" id="exampleInputPasswordRepeat"
                   placeholder="Repeat Password">
        </div>
        <div class="form-group" id="RegistrationButton">
            <button type="submit" id="btn" class="btn btn-primary" asp-action="ForgetPassword" asp-controller="Account" asp-area="Admin">Forget password</button>
            <button type="submit" id="btn" class="btn btn-primary"> Log In </button>

        </div>
        <div class="form-group">
            <button type="submit" id="btn" class="btn btn-primary btn-block">Register</button>
        </div>
        <hr>
        <a href="index.html" class="btn btn-google btn-block">
            <i class="fab fa-google fa-fw"></i> Register with Google
        </a>
        <a href="index.html" class="btn btn-facebook btn-block">
            <i class="fab fa-facebook-f fa-fw"></i> Register with Facebook
        </a>
</form>
